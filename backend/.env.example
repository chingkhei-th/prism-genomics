# =============================================================================
# PRISM-Genomics Configuration
# =============================================================================

# --- Data Paths ---
# 1000 Genomes Phase 3 VCF (population genotype source)
GENOMES_VCF_PATH=data/raw/ALL.chr1.phase3_shapeit2_mvncall_integrated_v5a.20130502.genotypes.vcf.gz

# ClinVar VCF (clinical variant labels: Pathogenic / Benign)
CLINVAR_VCF_PATH=data/raw/clinvar.vcf.gz

# --- Data Pipeline Settings ---
# Comma-separated chromosomes to process (e.g. "1,22" or "1")
CHROMOSOMES=1,22

# Maximum ClinVar variants to extract (blank = no limit)
MAX_CLINVAR_VARIANTS=

# --- Output Directories ---
PROCESSED_DIR=data/processed
MODELS_DIR=data/models

# --- Training Hyperparameters ---
BATCH_SIZE=64
EPOCHS=50
LEARNING_RATE=0.001
DROPOUT=0.3
TEST_SIZE=0.2
RANDOM_SEED=42

# --- Inference ---
# Device for PyTorch inference (cpu or cuda)
DEVICE=cpu
MODEL_WEIGHTS_FILE=model_weights.pth

# --- Database (Supabase PostgreSQL) ---
# Connection pooling URL (used at runtime)
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-1-region.pooler.supabase.com:6543/postgres?pgbouncer=true
# Direct connection URL (used for migrations)
DIRECT_URL=postgresql://postgres.your-project-ref:your-password@aws-1-region.pooler.supabase.com:5432/postgres

# --- IPFS / Pinata ---
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET=your_pinata_secret
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# --- Blockchain (Ethereum Sepolia Testnet) ---
BLOCKCHAIN_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-alchemy-api-key
PATIENT_REGISTRY_ADDRESS=0xYourPatientRegistryContractAddress
DATA_ACCESS_ADDRESS=0xYourDataAccessContractAddress
CHAIN_ID=11155111
# Funded deployer wallet (used to pay gas on behalf of patients)
DEPLOYER_PRIVATE_KEY=your_deployer_wallet_private_key
