# =============================================================================
# PRISM-Genomics Configuration
# =============================================================================

# --- Data Paths ---
# Raw 1000 Genomes VCF file (chr1)
VCF_INPUT_PATH=data/raw/ALL.chr1.phase3_shapeit2_mvncall_integrated_v5a.20130502.genotypes.vcf.gz

# --- Output Directories ---
GWAS_DIR=data/gwas
PROCESSED_DIR=data/processed
MODELS_DIR=data/models

# --- GWAS Configuration ---
# Traits to fetch from GWAS Catalog (comma-separated)
GWAS_TRAITS=type 2 diabetes,coronary artery disease,hypertension,breast cancer
# Minimum p-value threshold for GWAS significance
GWAS_P_VALUE_THRESHOLD=5e-8
# Chromosome to filter (should match VCF)
GWAS_CHROMOSOME=1

# --- PRS Configuration ---
# Heritability factor for liability threshold model (0-1)
# Higher = PRS contributes more to disease liability
HERITABILITY=0.5
# Disease prevalence for label simulation (0-1)
DISEASE_PREVALENCE=0.15

# --- ML Configuration ---
# Train/test split ratio
TEST_SIZE=0.2
# Random seed for reproducibility
RANDOM_SEED=42
