<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>PRISM Genomics - Risk Report</title>
    <style>
      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica,
          Arial, sans-serif;
        color: #333;
        line-height: 1.6;
        margin: 0;
        padding: 0;
        background-color: #fff;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px;
      }
      .header {
        border-bottom: 2px solid #eaeaea;
        padding-bottom: 20px;
        margin-bottom: 30px;
      }
      .header h1 {
        margin: 0;
        color: #111;
        font-size: 28px;
      }
      .header p {
        margin: 5px 0 0;
        color: #666;
        font-size: 14px;
      }
      .grid {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
      }
      .card {
        flex: 1;
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
      }
      .card h3 {
        font-size: 12px;
        text-transform: uppercase;
        color: #6b7280;
        margin: 0 0 10px;
        letter-spacing: 0.05em;
      }
      .card .value {
        font-size: 24px;
        font-weight: bold;
        color: #111;
      }
      .card .subtext {
        font-size: 12px;
        color: #6b7280;
        margin-top: 5px;
      }
      .section-title {
        font-size: 18px;
        font-weight: 600;
        border-bottom: 1px solid #eaeaea;
        padding-bottom: 10px;
        margin-bottom: 20px;
        color: #111;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
        font-size: 12px;
      }
      th {
        text-align: left;
        padding: 10px;
        background-color: #f9fafb;
        color: #4b5563;
        font-weight: 600;
        border-bottom: 2px solid #e5e7eb;
      }
      td {
        padding: 10px;
        border-bottom: 1px solid #e5e7eb;
        color: #374151;
      }
      td.mono {
        font-family: monospace;
        color: #2563eb;
      }
      .footer {
        margin-top: 50px;
        padding-top: 20px;
        border-top: 1px solid #eaeaea;
        text-align: center;
        font-size: 11px;
        color: #9ca3af;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>AI Risk Intelligence Report</h1>
        <p>PRISM Genomics - Polygenic Risk Score Analysis</p>
        <p style="margin-top: 10px; font-weight: bold;">Date Generated:
          {{date}}</p>
      </div>

      <div class="grid">
        <div class="card">
          <h3>Risk Level</h3>
          <div class="value">{{riskLevel}}</div>
          {{#if confidenceNote}}
            <div class="subtext">{{confidenceNote}}</div>
          {{/if}}
        </div>

        <div class="card">
          <h3>Probability</h3>
          <div class="value">{{probability}}%</div>
          <div class="subtext">Disease Probability</div>
        </div>

        <div class="card">
          <h3>SNP Coverage</h3>
          <div class="value">{{coveragePercent}}%</div>
          <div class="subtext">{{matchedSnps}}
            /
            {{totalSnps}}
            variants matched</div>
        </div>
      </div>

      {{#if hasVariants}}
        <h2 class="section-title">High-Impact Pathogenic Variants</h2>
        <table>
          <thead>
            <tr>
              <th>rsID</th>
              <th>Chr</th>
              <th>Position</th>
              <th>Genotype</th>
              <th>Disease</th>
            </tr>
          </thead>
          <tbody>
            {{#each variants}}
              <tr>
                <td class="mono">{{rsid}}</td>
                <td>{{chromosome}}</td>
                <td class="mono">{{position}}</td>
                <td><strong>{{genotype}}</strong></td>
                <td>{{disease}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}

      <div class="footer">
        <p>Disclaimer: PRISM Genomics predictions are for informational purposes
          based on ML probability models and do not constitute professional
          medical diagnoses.</p>
        {{#if architecture}}
          <p>Model:
            {{architecture}}
            | Features:
            {{nFeatures}}
            | Training Samples:
            {{nTrainingSamples}}</p>
        {{/if}}
      </div>
    </div>
  </body>
</html>